{
  "env": {
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "ignorePatterns": ["node_modules/", "dist/", "vendor/"],
  "rules": {
    "prettier/prettier": "error",
    "indent": 2
  }
}
